.container {
  background: gray;
  padding: 10px;
}

.chessboard {
  border: 1px solid #555;
}

.row {
  display: flex;
}

.col {
  flex: 1 1;
  position: relative;
  color: whitesmoke;
}

.col.odd {
  background: #555;
}

.ratio-keeper {
  padding-top: 100%;
}

.col-content {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  font-size: 36px;
  line-height: 44px;
}
